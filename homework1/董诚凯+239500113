# compute.cpp
#include <iostream>
using namespace std;

int main() {
    int num1, num2, choice;
    
    // 输入两个数
    cout << "请输入第一个整数：";
    cin >> num1;
    cout << "请输入第二个整数：";
    cin >> num2;
    
    // 选择操作
    cout << "请选择操作(1:加法,2:减法):";
    cin >> choice;
    
    // 根据选择执行相应的操作并输出结果
    if (choice == 1) {
        // 执行加法操作
        int sum = num1 + num2;
        std::cout << "结果：" << sum << std::endl;
        // 在此添加你的代码
    } else if (choice == 2) {
        // 执行减法操作
        int difference = num1 - num2;
        std::cout << "结果：" << difference << std::endl;
    } else {
        // 处理无效的选择
        std::cout << "无效的选择！" << std::endl;
    }
    
    return 0;
}

