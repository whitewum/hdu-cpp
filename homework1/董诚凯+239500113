# guess_number.cpp
#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    // 初始化随机数生成器
    srand(time(0));
    
    // 生成1到10之间的随机数
    int secretNumber = rand() % 10 + 1;
    int guess;
    int attempts = 0;
    
    cout << "我想了一个1到10之间的数字，请猜一猜：" << endl;
    
    // 使用循环直到猜对
    do {
        cout << "你的猜测：";
        cin >> guess;
        attempts++;
        
        // 判断猜测结果，并给出相应提示
        if(guess>secretNumber){
        	cout<<"大了"<<endl; 
		    }else if(guess<secretNumber){
			    cout<<"小了"<<endl; 
		    }else{
			    cout<<"猜对了！"<<endl;
		    }
        
} while (guess != secretNumber);
    
    // 猜对后输出尝试次数
    cout<<"尝试次数："<<attempts<<endl; 

    return 0;
}
